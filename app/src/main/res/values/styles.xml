<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>


    </style>



    <style name="StylePersonCardItemLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>

    </style>

    <style name="StyleInputLayoutErrorTextAppears">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/rubik_regular</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="paddingStart">-10dp</item>
    </style>


    <style name="StyleInputLayout" tools:override="true" parent="AppTheme">
        <item name="errorTextAppearance">@style/StyleInputLayoutErrorTextAppears</item>
        <item name="colorPrimary">@color/default_gray</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxStrokeColor">@color/default_white</item>
        <item name="errorIconDrawable">@null</item>
    </style>


    <style name="SpinnerTheme" parent="Widget.AppCompat.Spinner.DropDown">
        <item name="android:background">@drawable/country_code_spinner_background</item>
    </style>



    <style name="StyleSearchPersonEdittext">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:background">@drawable/main_input_background</item>
        <item name="android:hint">@string/search_person</item>
        <item name="android:textColor">@color/default_gray</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:layout_marginStart">27dp</item>
        <item name="android:layout_marginEnd">23dp</item>
        <item name="android:drawablePadding">15dp</item>
    </style>


<!--    -->
