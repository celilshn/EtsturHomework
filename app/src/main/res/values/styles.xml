    <style name="ActivityHeaderRM30">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/default_white</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>
    <style name="CardViewTextHeaderRR12">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/default_gray</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>
    <style name="ButtonTextRM16">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/default_white</item>
        <item name="android:lineSpacingExtra">3sp</item>
    </style>

    <style name="StyleAddPersonButtonStyle" parent="ButtonTextRM16">
        <item name="android:background">@drawable/add_or_edit_person_confirm_button_background
        </item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:text">@string/save_or_edit</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="CardViewTextRM14">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/rubik_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/default_black_light</item>
        <item name="android:lineSpacingExtra">3sp</item>
    </style>
    <style name="StyleTextWitBackgroundRM14" parent="CardViewTextRM14">
        <item name="android:background">@drawable/main_input_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>




    <style name="ButtonTextSPFR16">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/sfprotext_regular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/default_white</item>
        <item name="android:lineSpacingExtra">5sp</item>
    </style>

    <style name="CustomDialogMainBackground" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
</resources>